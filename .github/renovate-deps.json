{
  "recreateWhen": "always",
  "enabledManagers": ["regex"],
  "baseBranches": [
    "main",
    "tests/gtest",
    "tests/Boost-ext-ut",
    "sfml3",
    "sfml3-resurse-locale",
    "sfml3-imagini-externe-api",
    "sfml2",
    "sfml2-resurse-locale",
    "sfml2-imagini-externe-api",
    "llms",
    "http-server",
    "ftxui",
    "descarcare-date-api",
    "common-libs",
    "baze-de-date/sqlite",
    "baze-de-date/pqxx"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        ".github/workflows/*.yml",
        ".github/actions/**/*.yml",
        "CMakeLists.txt",
        "README.md",
        "tests/CMakeLists.txt",
        "scripts/*.sh"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?) versioning=(?<versioning>\\S+?)\\s+.*=(?<currentValue>\\S+)",
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?) versioning=(?<versioning>\\S+?)\\s+.*: \"(?<currentValue>\\S+)\"",
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?) versioning=(?<versioning>\\S+?)\\s+GIT_TAG\\s+(?<currentValue>\\S+)",
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?) versioning=(?<versioning>\\S+?)\\s+#\\s*GIT_TAG\\s+[0-9a-fA-F]{40}\\s+#\\s*(?<currentValue>\\S+)",
        "<!--\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+versioning=(?<versioning>\\S+)\\s*-->\\s*-\\s*Versiunea\\s+folositÄƒ:\\s*\\[v(?<currentValue>[^\\]]+)\\]\\([^\\)]+\\)",
        "<!--\\s+renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+) versioning=(?<versioning>\\S+)\\s+-->\\s+.*\\/tree\\/(?<currentValue>\\S+)\\)"
      ],
      "datasourceTemplate": "{{{datasource}}}",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver-coerced{{/if}}"
    },
    {
      "customType": "regex",
      "description": "Update SFML commented SHA",
      "managerFilePatterns": [
        "CMakeLists.txt"
      ],
      "matchStrings": [
        "# renovate: depName=(?<depName>\\S+)\\s+# GIT_TAG\\s+(?<currentDigest>[a-z0-9]{40}) # (?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "git-ref",
      "depNameTemplate": "{{{depName}}}",
      "packageNameTemplate": "https://github.com/{{{depName}}}",
      "versioningTemplate": "loose"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
