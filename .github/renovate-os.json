{
  "recreateWhen": "always",
  "enabledManagers": ["regex"],
  "baseBranches": [
    "baze-de-date/pqxx",
    "baze-de-date/sqlite",
    "common-libs",
    "descarcare-date-api",
    "ftxui",
    "http-server",
    "llms",
    "main",
    "sfml2",
    "sfml2-imagini-externe-api",
    "sfml2-resurse-locale",
    "sfml3",
    "sfml3-imagini-externe-api",
    "sfml3-resurse-locale",
    "tests/Boost-ext-ut",
    "tests/gtest"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        ".github/workflows/*.yml"
      ],
      "matchStrings": [
				"# renovate: depName=(?<depName>\\S+)\\s+runs-on: \\S+-(?<currentValue>\\S+)",
				"# renovate: depName=(?<depName>\\S+)\\s+- os: \\S+-(?<currentValue>\\S+)",
        "# renovate: depName=(?<depName>\\S+)\\s+name:\\s.*\\b(?:Ubuntu|macOS|Windows)\\s+(?<currentValue>\\S+)"
    	],
      "datasourceTemplate": "github-runners",
      "depNameTemplate": "{{{depName}}}",
      "versioningTemplate": "docker"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
